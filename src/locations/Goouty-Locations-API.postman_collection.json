{
    "info": {
        "name": "Goouty - Locations API",
        "description": "Collection for testing Goong.io integration in Goouty backend",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Search Locations",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{jwt_token}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{base_url}}/locations/search?input=Đà Lạt&limit=5",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "locations",
                        "search"
                    ],
                    "query": [
                        {
                            "key": "input",
                            "value": "Đà Lạt",
                            "description": "Search query"
                        },
                        {
                            "key": "limit",
                            "value": "5",
                            "description": "Number of results (max 20)"
                        },
                        {
                            "key": "location",
                            "value": "10.762622,106.660172",
                            "description": "Proximity search (lat,lng)",
                            "disabled": true
                        },
                        {
                            "key": "radius",
                            "value": "5000",
                            "description": "Search radius in meters",
                            "disabled": true
                        },
                        {
                            "key": "more_compound",
                            "value": "true",
                            "description": "Return more detailed information",
                            "disabled": true
                        }
                    ]
                },
                "description": "Search for places using autocomplete. Suitable for searching destinations like Đà Lạt, Phú Quốc, etc."
            }
        },
